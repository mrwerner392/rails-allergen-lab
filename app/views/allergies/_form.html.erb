
<% if flash[:errors] %>
  <h3>There were some errors:</h3>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<br><br>

<%= form_for @allergy do |f| %>

  <%= f.label :user_id %>
  <%= f.collection_select :user_id, @users, :id, :name %><br>

  <%= f.label :ingredient_id %>
  <%= f.collection_select :ingredient_id, @ingredients, :id, :name %><br><br>

  <%= f.submit %>

<% end %>
